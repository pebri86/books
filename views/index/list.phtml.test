<div id="content"></div>	
<script type="text/javascript">
		$( document ).ready(function(){
			$.get("/api/getalltopics",function(data,status){
				if(status=='success'){
					for(x=0;x<data.topics.length;x++){
					   $('#content').append("<section><div class=\"row\"><div class=\"col-xs-12\"><h3>"+
					   data.topics[x].title+"</h3></div></div><div class=\"row\">"+
							"<div class=\"col-xs-8\">"+
							"<p class=\"text-muted\">"+
							data.topics[x].description+
							"</p>"+
							"</div>"+
							"<div class=\"col-xs-4\">"+
							"<p class=\"pull-right\">"+
							"<a href=\"/vote/add/"+ data.topics[x].id+"\" class=\"btn btn-sm btn-success\">"+
							"<span class=\"glyphicon glyphicon-thumbs-up\">"+
							"<strong>"+data.topics[x].count+"</strong>"+
							"</span>"+
							"</a>"+
							"<a href=\"/topic/edit/"+data.topics[x].id+"\" class=\"btn btn-sm btn-primary\" id=\"edit\"><i class=\"fa fa-edit\"></i><strong>&nbsp Edit</strong></a>"+
							"<a href=\"/topic/delete/"+data.topics[x].id+"\" class=\"btn btn-sm btn-danger\" id=\"delete\" data-container=\"body\" data-toggle=\"popover\" data-trigger=\"hover\" data-placement=\"top\" data-title=\"Are you sure?\" data-content=\" This cannot be undone!\"><i class=\"fa fa-times-circle-o\"></i><strong>&nbsp Delete</strong></a>"+
							"</p></div></div></section><hr>"
						);	
					}
				}
			},"json");
		});
		
		$(function () {
           	$('[data-toggle="popover"]').popover();
        });	
</script>